# Server Configuration
NODE_ENV=development
PORT=3003

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=notification_db
DB_USER=postgres
DB_PASS=password

# Auth Service Configuration
AUTH_SERVICE_URL=http://localhost:3001

# Service API Key (for internal service-to-service communication)
SERVICE_API_KEY=your-service-api-key-change-in-production

# VAPID Keys for Web Push (generate with webpush.generateVAPIDKeys())
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_SUBJECT=mailto:admin@messenger.com

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=500

# Cleanup Configuration
CLEANUP_NOTIFICATIONS_DAYS=30
CLEANUP_SUBSCRIPTIONS_DAYS=90

# Logging
LOG_LEVEL=info
